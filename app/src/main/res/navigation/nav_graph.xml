<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Onboarding Fragment -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.officesuite.app.ui.onboarding.OnboardingFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.officesuite.app.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- PDF Viewer Fragment -->
    <fragment
        android:id="@+id/pdfViewerFragment"
        android:name="com.officesuite.app.ui.pdf.PdfViewerFragment"
        android:label="PDF Viewer"
        tools:layout="@layout/fragment_pdf_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- PPTX Viewer Fragment -->
    <fragment
        android:id="@+id/pptxViewerFragment"
        android:name="com.officesuite.app.ui.pptx.PptxViewerFragment"
        android:label="Presentation Viewer"
        tools:layout="@layout/fragment_pptx_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- DOCX Viewer Fragment -->
    <fragment
        android:id="@+id/docxViewerFragment"
        android:name="com.officesuite.app.ui.docx.DocxViewerFragment"
        android:label="Document Viewer"
        tools:layout="@layout/fragment_docx_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Markdown Fragment -->
    <fragment
        android:id="@+id/markdownFragment"
        android:name="com.officesuite.app.ui.markdown.MarkdownFragment"
        android:label="Markdown Viewer"
        tools:layout="@layout/fragment_markdown">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.officesuite.app.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Favorites Fragment -->
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.officesuite.app.ui.favorites.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites" />

    <!-- CSV Viewer Fragment -->
    <fragment
        android:id="@+id/csvViewerFragment"
        android:name="com.officesuite.app.ui.data.CsvViewerFragment"
        android:label="@string/csv_file"
        tools:layout="@layout/fragment_csv_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- XLSX Viewer Fragment -->
    <fragment
        android:id="@+id/xlsxViewerFragment"
        android:name="com.officesuite.app.ui.xlsx.XlsxViewerFragment"
        android:label="Spreadsheet"
        tools:layout="@layout/fragment_xlsx_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- PDF Editor Fragment -->
    <fragment
        android:id="@+id/pdfEditorFragment"
        android:name="com.officesuite.app.ui.editor.PdfEditorFragment"
        android:label="@string/pdf_editor"
        tools:layout="@layout/fragment_pdf_editor">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- PPTX Editor Fragment -->
    <fragment
        android:id="@+id/pptxEditorFragment"
        android:name="com.officesuite.app.ui.editor.PptxEditorFragment"
        android:label="@string/presentation_editor"
        tools:layout="@layout/fragment_pptx_editor">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- JSON Viewer Fragment -->
    <fragment
        android:id="@+id/jsonViewerFragment"
        android:name="com.officesuite.app.ui.data.JsonViewerFragment"
        android:label="@string/json_file"
        tools:layout="@layout/fragment_json_viewer">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- DOCX Editor Fragment -->
    <fragment
        android:id="@+id/docxEditorFragment"
        android:name="com.officesuite.app.ui.editor.DocxEditorFragment"
        android:label="@string/document_editor"
        tools:layout="@layout/fragment_docx_editor">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="is_xml"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <!-- Document Statistics Fragment (AI Features) -->
    <fragment
        android:id="@+id/documentStatisticsFragment"
        android:name="com.officesuite.app.ui.ai.DocumentStatisticsFragment"
        android:label="@string/document_statistics"
        tools:layout="@layout/fragment_document_statistics">
        <argument
            android:name="file_uri"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="document_text"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.editor.PdfEditorFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_back"
            app:title="PDF Editor"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Annotation Toolbar -->
        <HorizontalScrollView
            android:id="@+id/toolbarScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/annotationToolbar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <ImageButton
                    android:id="@+id/btnPen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Pen"
                    android:src="@drawable/ic_pen"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnHighlighter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Highlighter"
                    android:src="@drawable/ic_highlight"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnEraser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eraser"
                    android:src="@drawable/ic_eraser"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnText"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add Text"
                    android:src="@drawable/ic_text_add"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    android:id="@+id/btnRectangle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Rectangle"
                    android:src="@drawable/ic_rectangle"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Circle"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Arrow"
                    android:src="@drawable/ic_arrow"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnLine"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Line"
                    android:src="@drawable/ic_line"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    android:id="@+id/btnColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Color"
                    android:src="@drawable/ic_color_palette"
                    app:tint="@android:color/black" />

                <ImageButton
                    android:id="@+id/btnStrokeWidth"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Stroke Width"
                    android:src="@drawable/ic_pen"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    android:id="@+id/btnUndo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Undo"
                    android:src="@drawable/ic_undo"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnRedo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Redo"
                    android:src="@drawable/ic_redo"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- PDF View with Annotation Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPdfPages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

            <com.officesuite.app.ui.editor.AnnotationView
                android:id="@+id/annotationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <!-- Page Navigation -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPrevious"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previous"
            app:fabSize="mini"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textPageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Page 1 of 1"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNext"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            app:fabSize="mini"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Save FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="Save"
        android:src="@drawable/ic_check"
        app:backgroundTint="@color/primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

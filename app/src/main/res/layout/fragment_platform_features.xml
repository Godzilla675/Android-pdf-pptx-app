<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.platform.PlatformFeaturesFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/platform_features" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Digital Wellbeing Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDigitalWellbeing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digital_wellbeing"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/digital_wellbeing_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall" />

                    <!-- Today's Usage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textTodayUsage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textColor="?attr/colorPrimary"
                                tools:text="45m" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/today"
                                android:textAppearance="?attr/textAppearanceLabelSmall" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textWeeklyUsage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                tools:text="5h 30m" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/this_week"
                                android:textAppearance="?attr/textAppearanceLabelSmall" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textAverageUsage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                tools:text="47m" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_average"
                                android:textAppearance="?attr/textAppearanceLabelSmall" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress bar for daily limit -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressDailyUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        app:trackCornerRadius="4dp"
                        app:trackThickness="8dp"
                        tools:progress="45"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/textRemainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:visibility="gone"
                        tools:text="1h 15m remaining"
                        tools:visibility="visible" />

                    <!-- Daily Limit Toggle -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDailyLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/enable_daily_limit" />

                    <!-- Daily Limit Settings -->
                    <LinearLayout
                        android:id="@+id/layoutDailyLimitSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/daily_limit"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                            <TextView
                                android:id="@+id/textDailyLimitValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorPrimary"
                                tools:text="2h" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderDailyLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="15"
                            android:valueFrom="15"
                            android:valueTo="480"
                            tools:value="120" />

                    </LinearLayout>

                    <!-- Break Reminder -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchBreakReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/break_reminder" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewStats"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/view_stats" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResetStats"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/reset" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Settings Tiles Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_settings_tiles"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/quick_settings_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchScannerTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/scanner_tile" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCreateTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_tile" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchConvertTile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/convert_tile" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Voice Commands Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVoiceCommands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_commands"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/voice_commands_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVoiceCommands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/enable_voice_commands" />

                    <LinearLayout
                        android:id="@+id/layoutVoiceSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchConfirmActions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/confirm_voice_actions" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchReadback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_readback" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVoiceHelp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/show_voice_commands" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Nearby Share Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNearbyShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nearby_share"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/nearby_share_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchQuickShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/show_quick_share" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Desktop Mode Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDesktopMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desktop_mode"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/desktop_mode_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall" />

                    <!-- Current Mode Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/textDesktopModeStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="Mobile Mode" />

                        <TextView
                            android:id="@+id/textKeyboardStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            tools:text="No keyboard connected" />

                        <TextView
                            android:id="@+id/textMouseStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            tools:text="No mouse connected" />

                    </LinearLayout>

                    <!-- Desktop Layout Settings -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowSidebar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/show_sidebar" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCompactToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/compact_toolbar" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMultiWindow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_multi_window" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDragDrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enable_drag_drop" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnKeyboardShortcuts"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/keyboard_shortcuts" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Platform Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/platform_info"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/textPlatformInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        tools:text="Android 14 (API 34)\nDevice: Google Pixel 8" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

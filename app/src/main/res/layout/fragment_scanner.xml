<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.scanner.ScannerFragment">

    <!-- Scanner Mode Tabs -->
    <HorizontalScrollView
        android:id="@+id/scannerModeTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupScanMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDocument"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_mode_document"
                android:checked="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipQrCode"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_mode_qr"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBusinessCard"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_mode_business_card"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIdDocument"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_mode_id"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipReceipt"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_mode_receipt"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/white" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- Border Overlay View for auto border detection -->
    <com.officesuite.app.ui.scanner.BorderOverlayView
        android:id="@+id/borderOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- Image Preview (after capture) -->
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- Page Count Badge -->
    <TextView
        android:id="@+id/textPageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="0 pages"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- Auto Border Toggle Badge -->
    <TextView
        android:id="@+id/textAutoBorderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Auto Border: ON"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/imagePreview"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- OCR Language Button -->
    <TextView
        android:id="@+id/textOcrLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="OCR: Latin"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/textPageCount"
        app:layout_constraintTop_toBottomOf="@id/scannerModeTabs" />

    <!-- Scan Result Card (for QR, Barcode, Business Card, ID, Receipt) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardScanResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/surface_container"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textScanResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Result"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/on_surface" />

            <TextView
                android:id="@+id/textScanResultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/on_surface_variant" />

            <LinearLayout
                android:id="@+id/layoutScanResultActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyResult"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActionResult"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- OCR Result -->
    <ScrollView
        android:id="@+id/scrollOcrResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_rounded"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toStartOf="@id/imagePreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPageCount">

        <TextView
            android:id="@+id/textOcrResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/white"
            android:visibility="gone" />

    </ScrollView>

    <!-- Controls Layout -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_container_dark"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGrayscale"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Grayscale"
                android:textAllCaps="false"
                app:backgroundTint="@color/surface_variant_dark"
                android:textColor="@color/text_primary_dark"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnhance"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enhance"
                android:textAllCaps="false"
                app:backgroundTint="@color/surface_variant_dark"
                android:textColor="@color/text_primary_dark"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <!-- Main Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnClear"
                style="@style/Widget.Material3.FloatingActionButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_delete"
                app:backgroundTint="@color/surface_variant_dark"
                app:shapeAppearance="@style/ShapeAppearance.OfficeSuite.FAB"
                app:tint="@color/text_primary_dark" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnCapture"
                style="@style/Widget.Material3.FloatingActionButton.Large.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                app:backgroundTint="@color/white"
                app:shapeAppearance="@style/ShapeAppearance.OfficeSuite.FAB"
                app:tint="@color/primary" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnOcr"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_text"
                app:backgroundTint="@color/secondary"
                app:shapeAppearance="@style/ShapeAppearance.OfficeSuite.FAB"
                app:tint="@color/on_secondary" />

        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePdf"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="@string/save_as_pdf"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_pdf"
            app:iconGravity="textStart" />

    </LinearLayout>

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

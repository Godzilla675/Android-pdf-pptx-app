<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.editor.DocxEditorFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_back"
            app:title="Document Editor"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Formatting Toolbar -->
        <HorizontalScrollView
            android:id="@+id/toolbarScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/formattingToolbar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <!-- Text Style -->
                <ImageButton
                    android:id="@+id/btnBold"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bold"
                    android:src="@drawable/ic_bold"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnItalic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Italic"
                    android:src="@drawable/ic_italic"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnUnderline"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Underline"
                    android:src="@drawable/ic_underline"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Alignment -->
                <ImageButton
                    android:id="@+id/btnAlignLeft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Left"
                    android:src="@drawable/ic_align_left"
                    app:tint="@color/primary" />

                <ImageButton
                    android:id="@+id/btnAlignCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Center"
                    android:src="@drawable/ic_align_center"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnAlignRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Align Right"
                    android:src="@drawable/ic_align_right"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Colors -->
                <ImageButton
                    android:id="@+id/btnTextColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Text Color"
                    android:src="@drawable/ic_color_palette"
                    app:tint="@android:color/black" />

                <ImageButton
                    android:id="@+id/btnHighlight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Highlight"
                    android:src="@drawable/ic_highlight"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnFontSize"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Font Size"
                    android:src="@drawable/ic_font_size"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Lists -->
                <ImageButton
                    android:id="@+id/btnBulletList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bullet List"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnNumberedList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Numbered List"
                    android:src="@drawable/ic_document"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Insert -->
                <ImageButton
                    android:id="@+id/btnInsertImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Insert Image"
                    android:src="@drawable/ic_image"
                    app:tint="@color/text_secondary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/light_gray" />

                <!-- Undo/Redo -->
                <ImageButton
                    android:id="@+id/btnUndo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Undo"
                    android:src="@drawable/ic_undo"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btnRedo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Redo"
                    android:src="@drawable/ic_redo"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Rich Text Editor -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <com.officesuite.app.ui.editor.RichTextEditor
                    android:id="@+id/richTextEditor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|start"
                    android:hint="Start typing your document..."
                    android:inputType="textMultiLine|textCapSentences"
                    android:lineSpacingMultiplier="1.4"
                    android:minHeight="500dp"
                    android:padding="16dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </androidx.core.widget.NestedScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <!-- Save FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Save"
        android:src="@drawable/ic_check"
        app:backgroundTint="@color/primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
